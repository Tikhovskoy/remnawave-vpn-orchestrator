# ──────────────────────────────────────
# Конфигурация сервиса-оркестратора
# ──────────────────────────────────────

# Приложение
APP_HOST=0.0.0.0
APP_PORT=8000
APP_DEBUG=false

# Наш PostgreSQL (orchestrator-db в docker-compose)
DATABASE_URL=postgresql+asyncpg://orchestrator:orchestrator@localhost:5433/orchestrator

# ──────────────────────────────────────
# Интеграция с RemnaWave
# ──────────────────────────────────────

# URL панели RemnaWave (контейнер remnawave, проброшен на localhost:3000)
REMNAWAVE_BASE_URL=http://localhost:3000
# API-токен — создать в панели RemnaWave → API Tokens
REMNAWAVE_API_TOKEN=change_me

# ──────────────────────────────────────
# Панель RemnaWave (docker-compose .env)
# ──────────────────────────────────────

# БД RemnaWave
RW_POSTGRES_USER=remnawave
RW_POSTGRES_PASSWORD=remnawave
RW_POSTGRES_DB=remnawave

# БД оркестратора
ORCH_POSTGRES_USER=orchestrator
ORCH_POSTGRES_PASSWORD=orchestrator
ORCH_POSTGRES_DB=orchestrator

# JWT RemnaWave (сменить на проде!)
JWT_AUTH_SECRET=change_me_auth_secret_here
JWT_API_TOKENS_SECRET=change_me_api_tokens_secret_here
